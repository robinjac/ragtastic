{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "module": "preserve",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
